<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="26dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sysname"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="About the app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sysid"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:text="V 1.0.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.75"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:text="This app is for viewing data for energy produced by the enphase solar panel system installed at Magnolia Block, Brigade Millenium"
                        android:textColor="#000"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:text="Features:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    app:cardElevation="12dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="- Energy produced is measured in Killowatt hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="- Shows live updates of production"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="- Generates real-time graphs for energy produced throughout a day, month or year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>



                </androidx.cardview.widget.CardView>


                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:text="Contact:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardElevation="12dp"
                    android:layout_margin="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="28dp"
                            android:src="@drawable/ic_baseline_email_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:paddingLeft="3dp"
                            android:autoLink="email"
                            android:textColor="#000"
                            android:layout_margin="25dp"
                            android:textSize="18dp"
                            android:text="vinaycpaul@gmail.com"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>



</LinearLayout>